@model SessionStorageApp.Models.Customer
<h1>Register Customer</h1>
<hr/>
<div class="row">
    <div class="col-me-4">
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="GSTN" class="control-label"></label>
                <input asp-for="GSTN" class="control-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="control-control"></input>
            </div>
            <div class="form-group">
                <table>
                    @{
                        List<SelectListItem> shops = Model.ShopList;
                        foreach (var shop in shops)
                        {
                            <td>
                                <input type="checkbox" id="@shop.Value" value="@shop.Value" name="shops" checked="@shop.Selected" />
                            </td>
                            <td>
                                <label for="@shop.Value" class="control-label">@shop.Value</label>
                            </td>
                        }
                    }
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
